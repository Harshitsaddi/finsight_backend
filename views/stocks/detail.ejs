<!-- views/stocks/detail.ejs -->
<%- include('../layouts/header') %>

<!-- Stock Header -->
<div style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; padding: 40px 30px; border-radius: 16px; margin-bottom: 30px; position: relative; overflow: hidden;">
    <div style="position: absolute; top: -30px; right: -30px; width: 120px; height: 120px; background: rgba(255,255,255,0.1); border-radius: 50%;"></div>
    
    <div style="display: flex; justify-content: space-between; align-items: flex-start; position: relative; z-index: 2;">
        <div>
            <div style="display: flex; align-items: center; margin-bottom: 15px;">
                <div style="background: rgba(255,255,255,0.2); padding: 15px; border-radius: 50%; margin-right: 20px;">
                    <span style="font-size: 2em;">üìä</span>
                </div>
                <div>
                    <h1 style="margin: 0; font-size: 2.5em; font-weight: 700;"><%= stock.symbol %></h1>
                    <p style="margin: 10px 0 0 0; font-size: 1.2em; opacity: 0.9;"><%= stock.name %></p>
                </div>
            </div>
            <div style="display: flex; gap: 15px; flex-wrap: wrap;">
                <span style="background: rgba(255,255,255,0.2); padding: 6px 15px; border-radius: 20px; font-size: 0.9em;">
                    <%= stock.sector %>
                </span>
                <span style="background: rgba(255,255,255,0.2); padding: 6px 15px; border-radius: 20px; font-size: 0.9em;">
                    <%= stock.industry || 'N/A' %>
                </span>
            </div>
        </div>
        
        <div style="text-align: right;">
            <a href="/stocks/market" style="background: rgba(255,255,255,0.2); color: white; padding: 10px 20px; text-decoration: none; border-radius: 20px; margin-right: 10px;">‚Üê Market</a>
            <a href="/demo/dashboard" style="background: rgba(255,255,255,0.2); color: white; padding: 10px 20px; text-decoration: none; border-radius: 20px;">Dashboard</a>
        </div>
    </div>
</div>

<!-- Price Display -->
<% 
    const change = stock.currentPrice - stock.previousClose;
    const changePercent = (change / stock.previousClose) * 100;
%>

<div style="display: grid; grid-template-columns: 1.5fr 1fr; gap: 25px; margin-bottom: 30px;">
    
    <!-- Current Price Card -->
    <div style="background: white; padding: 30px; border-radius: 16px; box-shadow: 0 4px 20px rgba(0,0,0,0.08);">
        <div style="font-size: 0.9em; color: #666; margin-bottom: 10px;">CURRENT PRICE</div>
        <div style="font-size: 3em; font-weight: 700; color: #2c3e50; margin-bottom: 10px;">
            $<%= stock.currentPrice.toFixed(2) %>
        </div>
        <div style="font-size: 1.2em; font-weight: 600; color: <%= change >= 0 ? '#4CAF50' : '#f44336' %>; display: flex; align-items: center; gap: 10px;">
            <%= change >= 0 ? '‚ñ≤' : '‚ñº' %> $<%= Math.abs(change).toFixed(2) %>
            <span style="background: <%= change >= 0 ? '#e8f5e9' : '#ffebee' %>; color: <%= change >= 0 ? '#4CAF50' : '#f44336' %>; padding: 6px 12px; border-radius: 12px; font-size: 0.9em;">
                <%= change >= 0 ? '+' : '' %><%= changePercent.toFixed(2) %>%
            </span>
        </div>
        <div style="margin-top: 20px; padding-top: 20px; border-top: 1px solid #e0e0e0; display: grid; grid-template-columns: 1fr 1fr; gap: 20px;">
            <div>
                <div style="font-size: 0.85em; color: #666;">Previous Close</div>
                <div style="font-weight: 600; color: #2c3e50; font-size: 1.1em;">$<%= stock.previousClose.toFixed(2) %></div>
            </div>
            <div>
                <div style="font-size: 0.85em; color: #666;">Last Updated</div>
                <div style="font-weight: 600; color: #2c3e50; font-size: 1.1em;">
                    <%= new Date(stock.lastUpdated).toLocaleTimeString() %>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Quick Trade Card -->
    <div style="background: linear-gradient(135deg, #4CAF50, #45a049); color: white; padding: 30px; border-radius: 16px; box-shadow: 0 4px 20px rgba(76, 175, 80, 0.3);">
        <h3 style="margin: 0 0 20px 0; font-size: 1.3em;">Quick Trade</h3>
        
        <form id="quickTradeForm">
            <div style="margin-bottom: 15px;">
                <label style="display: block; margin-bottom: 8px; opacity: 0.9; font-weight: 600;">Portfolio</label>
                <select name="portfolioId" required style="width: 100%; padding: 12px; border: none; border-radius: 8px; font-size: 1em;">
                    <option value="">Select portfolio...</option>
                    <% portfolios.forEach(p => { %>
                        <option value="<%= p._id %>"><%= p.name %></option>
                    <% }) %>
                </select>
            </div>
            
            <div style="margin-bottom: 15px;">
                <label style="display: block; margin-bottom: 8px; opacity: 0.9; font-weight: 600;">Shares</label>
                <input type="number" name="qty" required min="1" step="1" placeholder="Quantity" 
                       style="width: 100%; padding: 12px; border: none; border-radius: 8px; font-size: 1em;">
            </div>
            
            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 10px; margin-bottom: 20px;">
                <button type="submit" name="type" value="BUY"
                        style="padding: 15px; background: white; color: #4CAF50; border: 2px solid white; border-radius: 8px; font-weight: 700; cursor: pointer; font-size: 1em;">
                    üõí BUY
                </button>
                <button type="submit" name="type" value="SELL"
                        style="padding: 15px; background: rgba(255,255,255,0.2); color: white; border: 2px solid white; border-radius: 8px; font-weight: 700; cursor: pointer; font-size: 1em;">
                    üí∞ SELL
                </button>
            </div>
            
            <input type="hidden" name="symbol" value="<%= stock.symbol %>">
        </form>
        
        <div style="background: rgba(255,255,255,0.2); padding: 15px; border-radius: 8px; margin-top: 15px;">
            <div style="font-size: 0.9em; opacity: 0.9; margin-bottom: 5px;">Trading at market price</div>
            <div style="font-size: 1.3em; font-weight: 700;">$<%= stock.currentPrice.toFixed(2) %> per share</div>
        </div>
    </div>
</div>

<!-- Stock Statistics -->
<div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px; margin-bottom: 30px;">
    
    <div style="background: white; padding: 20px; border-radius: 12px; box-shadow: 0 4px 15px rgba(0,0,0,0.08);">
        <div style="font-size: 0.85em; color: #666; margin-bottom: 8px;">Day Range</div>
        <div style="font-weight: 700; font-size: 1.2em; color: #2c3e50;">
            $<%= stock.dayLow.toFixed(2) %> - $<%= stock.dayHigh.toFixed(2) %>
        </div>
    </div>
    
    <div style="background: white; padding: 20px; border-radius: 12px; box-shadow: 0 4px 15px rgba(0,0,0,0.08);">
        <div style="font-size: 0.85em; color: #666; margin-bottom: 8px;">52 Week Range</div>
        <div style="font-weight: 700; font-size: 1.2em; color: #2c3e50;">
            $<%= stock.fiftyTwoWeekLow.toFixed(2) %> - $<%= stock.fiftyTwoWeekHigh.toFixed(2) %>
        </div>
    </div>
    
    <div style="background: white; padding: 20px; border-radius: 12px; box-shadow: 0 4px 15px rgba(0,0,0,0.08);">
        <div style="font-size: 0.85em; color: #666; margin-bottom: 8px;">Volume</div>
        <div style="font-weight: 700; font-size: 1.2em; color: #2c3e50;">
            <%= (stock.volume / 1000000).toFixed(2) %>M
        </div>
    </div>
    
    <div style="background: white; padding: 20px; border-radius: 12px; box-shadow: 0 4px 15px rgba(0,0,0,0.08);">
        <div style="font-size: 0.85em; color: #666; margin-bottom: 8px;">Market Cap</div>
        <div style="font-weight: 700; font-size: 1.2em; color: #2c3e50;">
            $<%= (stock.marketCap / 1000000000).toFixed(2) %>B
        </div>
    </div>
    
    <div style="background: white; padding: 20px; border-radius: 12px; box-shadow: 0 4px 15px rgba(0,0,0,0.08);">
        <div style="font-size: 0.85em; color: #666; margin-bottom: 8px;">P/E Ratio</div>
        <div style="font-weight: 700; font-size: 1.2em; color: #2c3e50;">
            <%= stock.peRatio ? stock.peRatio.toFixed(2) : 'N/A' %>
        </div>
    </div>
    
    <div style="background: white; padding: 20px; border-radius: 12px; box-shadow: 0 4px 15px rgba(0,0,0,0.08);">
        <div style="font-size: 0.85em; color: #666; margin-bottom: 8px;">Dividend Yield</div>
        <div style="font-weight: 700; font-size: 1.2em; color: #2c3e50;">
            <%= stock.dividendYield ? stock.dividendYield.toFixed(2) + '%' : 'N/A' %>
        </div>
    </div>
</div>

<!-- About Section -->
<div style="background: white; padding: 30px; border-radius: 16px; box-shadow: 0 4px 20px rgba(0,0,0,0.08); margin-bottom: 30px;">
    <h3 style="margin: 0 0 20px 0; color: #2c3e50; display: flex; align-items: center;">
        <span style="margin-right: 10px;">üìù</span>
        About <%= stock.name %>
    </h3>
    <p style="color: #666; line-height: 1.8; font-size: 1.05em;">
        <%= stock.description || 'No description available.' %>
    </p>
    
    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 20px; margin-top: 30px; padding-top: 20px; border-top: 1px solid #e0e0e0;">
        <div>
            <div style="font-size: 0.9em; color: #666; margin-bottom: 5px;">Sector</div>
            <div style="font-weight: 600; color: #2c3e50; font-size: 1.1em;"><%= stock.sector %></div>
        </div>
        <div>
            <div style="font-size: 0.9em; color: #666; margin-bottom: 5px;">Industry</div>
            <div style="font-weight: 600; color: #2c3e50; font-size: 1.1em;"><%= stock.industry || 'N/A' %></div>
        </div>
        <div>
            <div style="font-size: 0.9em; color: #666; margin-bottom: 5px;">Symbol</div>
            <div style="font-weight: 600; color: #2196F3; font-size: 1.1em;"><%= stock.symbol %></div>
        </div>
    </div>
</div>

<script>
document.getElementById('quickTradeForm').addEventListener('submit', async function(e) {
    e.preventDefault();
    
    const clickedButton = e.submitter;
    const type = clickedButton.value;
    
    const formData = new FormData(this);
    const data = {
        portfolioId: formData.get('portfolioId'),
        symbol: formData.get('symbol'),
        qty: formData.get('qty'),
        type: type
    };
    
    try {
        const response = await fetch('/stocks/trade', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(data)
        });
        
        const result = await response.json();
        
        if (result.success) {
            alert(result.message);
            this.reset();
        } else {
            alert('Trade failed: ' + result.error);
        }
    } catch (error) {
        alert('Trade failed: ' + error.message);
    }
});

// Auto-refresh price every 30 seconds
setInterval(() => {
    window.location.reload();
}, 30000);
</script>

<%- include('../layouts/footer') %>